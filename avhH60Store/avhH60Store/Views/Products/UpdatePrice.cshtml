@model Product

@{
    ViewData["Title"] = "Update Price";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["ErrorMessage"] != null)
{
    <partial name="_ErrorAlert"/>
}
<h1>Update Price</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdatePrice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"></label><span> @Html.DisplayFor(model => model.Description)</span>
            </div>
            <div class="mb-3">
                <label asp-for="BuyPrice" class="form-label"></label>
                <input asp-for="BuyPrice" class="form-control w-auto" />
                <span asp-validation-for="BuyPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="SellPrice" class="form-label"></label>
                <input asp-for="SellPrice" class="form-control w-auto" />
                <span asp-validation-for="SellPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <partial name="_BackToList" />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}