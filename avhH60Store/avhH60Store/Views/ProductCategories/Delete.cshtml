@model ProductCategory

@{
    ViewData["Title"] = "Delete category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProdCat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdCat)
        </dd>
    </dl>
    @if (ViewBag.Products.Count > 0)
    {
        <h5 class="text-warning my-3">⚠️ Warning if you delete this category, it will also delete @ViewBag.Products.Count products</h5>
    }
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <partial name="_BackToList" />
    </form>
</div>
